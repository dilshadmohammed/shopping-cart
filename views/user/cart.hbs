<section>
    <div class="container">

        <table class="table mt-5">
            <thead>
                <tr>

                    <th scope="col">Item</th>
                    <th scope="col">Title</th>
                    <th scope="col">Quantity</th>
                    

                </tr>
            </thead>
           {{#each products}}
          
            <tbody>

                <tr>

                    <td><img style="width: 70px; height:70px;" src="/product-images/{{this.product._id}}.{{this.product.fileExtension}}" alt=""></td>
                    <td>{{this.product.Name}}</td>

                    <td>
                        <button class="cart-item-count mr-3">-</button>{{this.quantity}}<button class="cart-item-count ml-3">+</button>
                    </td>
                    <td>
                        <a href="" class="btn btn-danger">Remove</a>
                    </td>
                </tr>

            </tbody>
            {{/each}}
        </table>
    </div>
</section>