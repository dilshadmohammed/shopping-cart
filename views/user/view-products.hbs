<section>
    <div class="container mt-5">
        <div class="row">
            {{#each products}}
            <div class="col-md-3">
            <div class="card m-3" style="width: 16rem; height: 27rem;">
                <img class="card-img-top mx-auto d-block" style="width: 13rem; height: 12rem;" src="/product-images/{{this._id}}.{{this.fileExtension}}"
                    alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{this.Name}}</h5>
                    <p class="card-text">Rs.{{this.Price}}</p>
                    <p class="card-text">{{this.Description}}</p>
                    <button onclick="addToCart('{{this._id}}',this)" class="btn btn-primary fix-bottom add-to-cart-button">Add to Cart</button>
                </div>
            </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
